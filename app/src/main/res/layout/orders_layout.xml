<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:text="Name"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:text="Phone Number"
            android:textColor="@android:color/white"
            android:layout_below="@+id/order_user_name"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:text="Total Price"
            android:textColor="@android:color/white"
            android:layout_below="@+id/order_phone_number"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:text="Address, City"
            android:textColor="@android:color/white"
            android:layout_below="@+id/order_total_price"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:text="Date, Time"
            android:textColor="@android:color/white"
            android:layout_below="@+id/order_address"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"/>



    </RelativeLayout>




</RelativeLayout>